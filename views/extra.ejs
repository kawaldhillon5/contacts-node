<div id="contact">
    <div>
        <img key = <%= contact.avatar  %>                    
        src=<%- contact.avatar || `https://robohash.org/${contact.id}.png?size=200x200` %> alt="Avatar">
    </div>
    <div>
        <h1>
            <% if(contact.first || contact.last) {%>
                <span><%= contact.first%> <%= contact.last%></span>
                <% } else { %>
                <i>No name</i>
                <% } %>
            <%- include("favorite", {contact: contact}) %>
        </h1>
        <p>
            <a
                target="_blank"
                href=<%- `https://twitter.com/${contact.twitter}` %>
                >
            <%= contact.twitter%>  
            </a>
        </p>
        <% if(contact.notes) { %>
        <p><% contact.notes %></p>
        <% } %>
        <div>
            <form action="/contact/edit" method="get">
                <button type="submit">Edit</button>
            </form> 
            <form method="post" action="/contact/destroy"
                onsubmit=<%(event) => {
                    if (
                      !confirm(
                        "Please confirm you want to delete this record."
                      )
                    ) {
                      event.preventDefault();
                    }
                  } %>
            >
                  <button type="submit">Delete</button>
            </form>
        </div> 
    </div>
</div>
